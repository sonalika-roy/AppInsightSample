@page
@model PubsRazorPages.Pages.Publishers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Publisher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Publisher.PublisherID" />
            <div class="form-group">
                <label asp-for="Publisher.Name" class="control-label"></label>
                <input asp-for="Publisher.Name" class="form-control" />
                <span asp-validation-for="Publisher.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.City" class="control-label"></label>
                <input asp-for="Publisher.City" class="form-control" />
                <span asp-validation-for="Publisher.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.State" class="control-label"></label>
                <select asp-for="Publisher.State" asp-items="@Model.StateList" class="form-control"></select>
                <span asp-validation-for="Publisher.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.Country" class="control-label"></label>
                <input asp-for="Publisher.Country" class="form-control" />
                <span asp-validation-for="Publisher.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
