@page "{id}/{handler?}"
@model PubsRazorPages.Pages.Authors.EditModel

@{
    ViewData["Title"] = "Edit Author";
}

<h4>Edit Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.AuthorID" />
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label"></label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label"></label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.PhoneNumber" class="control-label"></label>
                <input asp-for="Author.PhoneNumber" class="form-control" />
                <span asp-validation-for="Author.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Address" class="control-label"></label>
                <input asp-for="Author.Address" class="form-control" />
                <span asp-validation-for="Author.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.City" class="control-label"></label>
                <input asp-for="Author.City" class="form-control" />
                <span asp-validation-for="Author.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.State" class="control-label"></label>
                <select asp-for="Author.State" asp-items="@Model.StateList" class="form-control"></select>
                <span asp-validation-for="Author.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.PostalCode" class="control-label"></label>
                <input asp-for="Author.PostalCode" class="form-control" />
                <span asp-validation-for="Author.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Author.HasContract" /> @Html.DisplayNameFor(model => model.Author.HasContract)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="submit" value="Delete" class="btn btn-default" asp-route-id="@Model.Author.AuthorID" asp-page-handler="Delete" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
